<Window x:Class="SoloAdventureToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoloAdventureToolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="850">
    <Grid>
        <TabControl>
            <TabItem Header="YesOrNo">
                <local:YesOrNO/>
            </TabItem>
            <TabItem Header="Dice Roller">
                <local:MainRollsView/>
            </TabItem>
            <TabItem Header="Quests">
                <local:QuestsView/>
            </TabItem>
            <TabItem Header="NPC">
                <local:NPCView/>
            </TabItem>
            <TabItem Header="Add Things">
                <local:AddThings/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
